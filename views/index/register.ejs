<% include ../partials/header.ejs %>
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 col-xs-10 col-xs-offset-1">
            <form action="/register" method="POST">
                <legend>
                    <h1 class="text-center">Rekistöröidy</h1>
                </legend>
                <div class="form-group">
                <input type="text" class="form-control" name="username" placeholder="käyttäjänimi">
                </div>
                <div class="form-group">
                <input type="email" class="form-control" name="email" placeholder="sähköposti">
                </div>
                <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="salasana">
                </div>
                <div class="form-group">
                     <input type="password" class="form-control" name="passwordCheck" placeholder="salasana uudestaan">
                </div>
                <div class="checkbox">
                    <label>
                    <input type="checkbox" name="terms">
                        Olen lukenut ja ymmärtänyt <a href="/ehdot">käyttöehdot</a>
                    </label>
                </div>
                <button type="submit" class="btn btn-block btn-success">Rekistöröidy</button>
            </form>
        </div>
    </div>
</div>


