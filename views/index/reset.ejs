<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-sm-4 col-sm-offset-4">
            <form action="/reset/<%= token %>" method="POST">
                <legend class="text-center">Reset Password</legend>
                <div class="form-group">
                    <label for="username">New Password</label>
                    <input class="form-control" type="password" name="password" placeholder="New password" autofocus="autofocus">
                </div>
                <div class="form-group">
                    <label for="password">Confirm Password</label>
                    <input class="form-control" type="password" name="confirm" placeholder="Confirm password">
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-lg btn-block" type="submit">Update Password</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>